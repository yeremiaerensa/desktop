{
  "workbench.startupEditor": "none",
  "workbench.settings.applyToAllProfiles": [
    "editor.mouseWheelZoom",
    "editor.fontFamily",
    "editor.fontSize",
    "window.title",
    "editor.quickSuggestions",
    "editor.suggestOnTriggerCharacters",
    "editor.parameterHints.enabled",
    "editor.hover.enabled",
    "editor.acceptSuggestionOnCommitCharacter"
  ],
  "editor.renderWhitespace": "all",
  "editor.cursorBlinking": "expand",
  "editor.mouseWheelZoom": true,
  "workbench.iconTheme": "vscode-icons",
  "editor.formatOnSave": true,
  "workbench.sideBar.location": "right",
  "editor.lineHeight": 27,
  "files.autoSave": "onWindowChange",
  "editor.fontFamily": "'Cascadia Code', Consolas, 'Courier New', monospace",
  "editor.renderLineHighlight": "none",
  "editor.matchBrackets": "near",
  "editor.minimap.enabled": false,
  "blade.format.enable": true,
  "window.customTitleBarVisibility": "windowed",
  "workbench.navigationControl.enabled": false,
  "workbench.activityBar.location": "top",
  "zenMode.centerLayout": false,
  "zenMode.fullScreen": false,
  "vetur.format.options.tabSize": 4,
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "workbench.colorTheme": "Parsinta Exclusive",
  "glassit.alpha": 200,
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact",
    "javascript-html": "html"
  },
  "liveSassCompile.settings.formats": [
    {
      "format": "expanded",
      "extensionName": ".css",
      "savePath": "/css",
      "savePathReplacementPairs": null
    }
  ],
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "window.newWindowDimensions": "maximized",
  "terminal.integrated.mouseWheelZoom": true,
  "terminal.integrated.tabs.defaultIcon": "copilot-large",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "window.title": "${dirty}${rootName}${separator}${profileName}${separator}${activeEditorShort}",
  "workbench.settings.showSuggestions": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.snippetSuggestions": "top",
  "editor.suggest.showSnippets": true,
  "editor.suggestOnTriggerCharacters": true,
  "editor.wordBasedSuggestions": "off",
  "editor.hover.enabled": true,
  "bootstrapIntelliSense": {
    "enable": false,
    "bsVersion": "5.3.6",
    "useLocalFile": false,
    "cssFilePath": "",
    "languageSupport": []
  },
  "php.validate.executablePath": "C:/xampp/php/php.exe",
  "intelephense.environment.phpVersion": "8.2.0",
  "php.inlayHints.parameters.enabled": false,
  "php.inlayHints.parameters.suppressNameMatchingValue": true,
  "php.inlayHints.parameters.byReference": false,
  "php.inlayHints.types.lambdaParameter": false,
  "php.format.rules.callParametersNewLineAfterLeftParen": false,
  "php.format.rules.addCommaAfterLastCallParameter": false,
  "intelephense.completion.functionReturnType": false,
  "php.problems.exclude": {
    "**/*": ["php_remove_redundant_closing_tag"]
  },
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "php": false
  },
  "[snippets]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "editor.formatOnType": true,
  // "php-cs-fixer.executablePathWindows": "C:\\php-tools\\php-cs-fixer.bat",
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "terminal.integrated.fontSize": 13,
  "genieai.enableConversationHistory": true,
  "bitoAI.appearance.fontSize (Match with IDE Font)": false,
  "git.openRepositoryInParentFolders": "never",
  "cSpell.language": "en,id-ID",
  "cSpell.userWords": [
    "_COOKIE",
    "_GET",
    "_POST",
    "_SESSION",
    "ampproject",
    "array_key_exists",
    "array_merge",
    "array_pop",
    "array_push",
    "array_shift",
    "array_unshift",
    "assosiatif",
    "assumsi",
    "bindParam",
    "btnSubmit",
    "databasenya",
    "DATANAME",
    "date",
    "die",
    "disubmit",
    "echo",
    "empty",
    "endforeach",
    "erensa",
    "ERRMODE",
    "esbuild",
    "execute",
    "exit",
    "explode",
    "fclose",
    "fetch",
    "fetchAll",
    "fgets",
    "file_get_contents",
    "file_put_contents",
    "filter_input",
    "filter_var",
    "flexbox",
    "fopen",
    "foreach",
    "fread",
    "fseek",
    "fwrite",
    "header",
    "htdocs",
    "htmlentities",
    "htmlspecialchars",
    "implode",
    "in_array",
    "include",
    "include_once",
    "is_dir",
    "is_file",
    "isset",
    "json_decode",
    "json_encode",
    "jssnippet",
    "loong",
    "ltrim",
    "microtime",
    "mkdir",
    "mktime",
    "mpdf",
    "mysqli",
    "mysqli_close",
    "mysqli_connect",
    "mysqli_fetch_array",
    "mysqli_fetch_assoc",
    "mysqli_num_rows",
    "mysqli_query",
    "noveldata",
    "password_hash",
    "password_verify",
    "PDO",
    "preg",
    "prepare",
    "print",
    "print_r",
    "rawurlencode",
    "require",
    "require_once",
    "rgba",
    "rmdir",
    "rowCount",
    "rtrim",
    "session_destroy",
    "session_start",
    "signup",
    "ssib",
    "strlen",
    "strtolower",
    "strtotime",
    "strtoupper",
    "substr",
    "TABLENAME",
    "time",
    "TRANSLIT",
    "trim",
    "ucfirst",
    "unlink",
    "unset",
    "urlencode",
    "var_dump",
    "vite",
    "vitejs",
    "webp",
    "wibu",
    "xampp",
    "Xora",
    "yeremia",
    "yeremiaerensa"
  ],
  "cSpell.ignoreWords": ["apiurl", "axios"],
  "cSpell.enabledFileTypes": {
    "php": true,
    "html": true,
    "javascript": true,
    "typescript": true,
    "json": true,
    "yaml": true,
    "markdown": true,
    "plaintext": true,
    "shellscript": true,
    "xml": true,
    "css": true,
    "scss": true,
    "less": true,
    "python": true,
    "java": true,
    "c": true,
    "cpp": true
  },
  "cSpell.checkOnlyEnabledFileTypes": true,
  "window.menuBarVisibility": "toggle",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "tailwindCSS.includeLanguages": {
    "plaintext": "css",
    "css": "css",
    "postcss": "css",
    "javascript": "javascript",
    "javascriptreact": "javascript",
    "typescript": "typescript",
    "typescriptreact": "typescript"
  },
  "tailwindCSS.experimental.configFile": "./tailwind.config.js",
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "[tailwindcss]": {
    "editor.tabSize": 2, // Indent 2 spasi sesuai standar CSS/Tailwind
    "editor.insertSpaces": true, // Gunakan spasi, bukan tab
    "editor.formatOnSave": true, // Auto format saat simpan
    "editor.quickSuggestions": {
      "strings": true // Saran otomatis saat tulis string, misal className
    },
    "editor.wordBasedSuggestions": "off", // Matikan saran kata dari dokumen lain, biar fokus Tailwind class
    "editor.snippetSuggestions": "bottom" // Snippet saran muncul di atas
  },
  "editor.wordWrap": "on",
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "##f5d820",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "@param",
      "color": "#218bed",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "()",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],
  "[javascript]": {
    "editor.snippets.codeActions.enabled": true
  }
}
